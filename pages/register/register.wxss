

.main {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.block {
    background-color: rgb(255, 255, 255);
    padding: 48rpx 0;
    margin: 32rpx 0 16rpx;
}

.group-card {
    width: 100%;
    display: flex;
    align-content: center;
    justify-content: center;
}

.group-card__header {
    display: flex;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 5px;
    padding: 40rpx 40rpx 40rpx 40rpx;
    color: #333;
    flex-direction: column;
    background-color: white;
    width: 85%;
}

.group-title {
    font-family: PingFang SC;
    font-weight: 500;
    color: #000000;
    font-size: 44rpx;
}

.input-blob {
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    --td-input-vertical-padding: 24rpx;
    background-color: #fff;
}
  
.input-blob__label {
    color: rgba(0, 0, 0, 0.9);
    font-size: 35rpx;
    line-height: 40rpx;
    margin: 0rpx 8rpx 8rpx;
}

.btn-wrapper {
    height: 100%;
}

.btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 120rpx;
    height: 100%;
    color: white;
  }

.column {
    flex-direction: column;
}

.delete-btn {
    background-color: #e34d59;
  }
.edit-btn {
    background-color: #ed7b2f;
}

.add-btn {
    border: 2rpx solid rgba(220,220,220,1);
    margin-top: 40rpx;
    justify-content: center;
    align-content: center;
    text-align: center;
    align-items: center;
    line-height: 150rpx;
    font-size: 70rpx;
    font-weight: lighter;
    height: 150rpx;
}

.add-btn:active {
    background-color: rgba(240,240,240,1);
}

.popup-block {
    width:600rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 0rpx 30rpx 50rpx 30rpx;
}
  
.popup-wrapper {
    margin: 32rpx;
    display: block;
}
  
.popup-header {
    display: flex;
    align-items: center;
    height: 116rpx;
}
  
.popup-title {
    flex: 1;
    text-align: center;
    font-weight: 600;
    font-size: 36rpx;
}
  
.popup-btn {
    font-size: 32rpx;
    padding: 32rpx;
}
  
.popup-btn--cancel {
    color: rgba(0, 0, 0, .6);
}
  
.popup-btn--confirm {
    color: #0052d9;
}
  